# ============================================================
# AI-COMPLIANCE AGENT - Docker Compose Environment Variables
# ============================================================
# Copy this file to .env for docker-compose usage
# For local development with Docker Compose

# ============================================================
# Django Settings
# ============================================================
DJANGO_ENV=development
SECRET_KEY=unsafe-dev-secret-key-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,web

# ============================================================
# PostgreSQL (Docker Service)
# ============================================================
POSTGRES_DB=ai_compliance_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ============================================================
# MinIO (Local S3-compatible storage)
# ============================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ============================================================
# Backblaze B2 (Use MinIO for local dev)
# ============================================================
BACKBLAZE_ENDPOINT_URL=http://minio:9000
BACKBLAZE_APPLICATION_KEY_ID=minioadmin
BACKBLAZE_APPLICATION_KEY=minioadmin
BACKBLAZE_BUCKET_NAME=ai-compliance-videos

# ============================================================
# Replicate AI (Use dummy token for local dev)
# ============================================================
REPLICATE_API_TOKEN=dummy_token_for_dev

# ============================================================
# Email (Console backend for local dev)
# ============================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@localhost
ADMIN_EMAIL=admin@localhost

# ============================================================
# AI Pipeline Settings
# ============================================================
MAX_VIDEO_FILE_SIZE=2147483648
MAX_VIDEO_DURATION=7200
FRAME_EXTRACTION_FPS=1
DASHBOARD_URL=http://localhost:8000
